<div class="container">
  <p id="notice" class="text-success"><%= notice %></p>

  <h2>Sites</h2>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Origin url</th>
        <th>Short path</th>
        <th>Usage amount</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @sites.each do |site| %>
        <tr>
          <td><%= site.origin_url %></td>
          <td><%= site.short_path %></td>
          <td><%= site.usage_amount %></td>
          <td><%= link_to 'Show', site %></td>
          <td><%= link_to 'Edit', edit_site_path(site) %></td>
          <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Site', new_site_path, class: 'btn btn-primary' %>
</div>
